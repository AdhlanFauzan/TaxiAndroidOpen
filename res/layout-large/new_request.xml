<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newReqLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/city"
                    android:text="@string/city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_weight=".3"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="30sp"/>

                <AutoCompleteTextView
                    android:id="@+id/citiesPicker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:completionThreshold="1"
                    android:inputType="textAutoComplete"
                    android:textSize="30sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/regionsLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/region"
                    android:text="@string/region"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_weight=".3"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="30sp"/>

                <AutoCompleteTextView
                    android:id="@+id/regionsPicker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight=".7"
                    android:completionThreshold="1"
                    android:inputType="textAutoComplete"/>

                <!--<Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/regionsPicker"
                    android:layout_weight=".7"/>
-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:layout_weight=".2"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/addressText"
                    android:layout_weight=".5"
                    android:textSize="30sp"
                    android:inputType="text">
                    <requestFocus/>
                </EditText>

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addressImage"
                    android:contentDescription="@string/show_address"
                    android:background="@drawable/ic_menu_mylocation"
                    android:textOff=""
                    android:textOn=""/>

                <Button
                    android:id="@+id/addressChange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="@string/change"
                    android:layout_weight=".2"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/destLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:text="@string/destination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_weight=".3"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"/>

                <AutoCompleteTextView
                    android:id="@+id/destination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight=".7"
                    android:completionThreshold="1"
                    android:inputType="textAutoComplete"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/priceLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/car_price"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:layout_weight=".3"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"/>

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/pricesPicker"
                    android:spinnerMode="dialog"
                    android:layout_weight=".7"/>
            </LinearLayout>

            <TextView
                android:id="@+id/filters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/needs_from"
                android:textColor="@color/label_color"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/llFilters"
                android:paddingTop="5.0px"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/reqInfoButtonContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"/>

        <Button
            android:id="@+id/requestSend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/request_taxi"
            android:textSize="30sp"
            android:layout_weight=".3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@android:style/Widget.ProgressBar.Large">
    </ProgressBar>
</LinearLayout>